@{
  Layout = "_Layout";
}

@model Market.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.Description)</h3>
<br>

@if(@Model.Treats.Count == 0)
{
  <p>This flavor is not available on the available treats any treats. Go ahead and create it!</p>
}
else
{
  <h4>Treats with this flavor:</h4>
  <ul>
  @foreach(var join in Model.Treats)
  {
    <li>@join.Treat.Name</li>
    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.TreatFlavorId)

    }
  }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Back to Flavor Menu", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
