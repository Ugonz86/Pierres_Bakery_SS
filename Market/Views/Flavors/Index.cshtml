@{
  Layout = "_Layout";
}

@using Market.Models;
@model List<Market.Models.Flavor>;

<h1>Flavors</h1>
<br>
<h4 style="color:grey;">In this section, you can see our Flavor Menu and add more flavors to our Menu if you like.</h4>
<hr />
@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
}

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
}
<hr />

<p>@Html.ActionLink("Create new flavor", "Create")</p>
<p>@Html.ActionLink("Treats Menu", "Index", "Treats")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
